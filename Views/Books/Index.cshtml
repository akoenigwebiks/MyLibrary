@model IEnumerable<MyLibrary.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Height</th>
            <th scope="col">Thickness</th>
            <th scope="col">Shelf Number</th>
            <th scope="col">Library Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Height</td>
                <td>@book.Thickness</td>
                <td>@book.Shelf?.Number</td>
                <td>@book.Shelf?.Library?.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@book.BookId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
