@model MyLibrary.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">Height</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Height)</dd>

            <dt class="col-sm-3">Thickness</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Thickness)</dd>

            <dt class="col-sm-3">Shelf Number</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Shelf.Number)</dd>

            <dt class="col-sm-3">Library</dt>
            <dd class="col-sm-9">
                <span class="badge bg-success">
                    @Html.DisplayFor(model => model.Shelf.Library.Name)
                </span>
            </dd>

        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
