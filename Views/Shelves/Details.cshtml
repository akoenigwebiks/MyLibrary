@model MyLibrary.Models.Shelf

@{
    ViewData["Title"] = "Details";
}

<h1>Shelf Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Html.DisplayFor(model => model.Number)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Number)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Height)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Height)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Width)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Width)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Library)
            </dt>
            <dd class="col-sm-10">
                <span class="badge bg-success">
                    @Html.DisplayFor(model => model.Library.Name)
                </span>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
