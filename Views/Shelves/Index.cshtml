@model IEnumerable<MyLibrary.ViewModels.VMShelfFreeSpaceAndCount>

@{
    ViewData["Title"] = "Shelves";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Shelf.Number)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Shelf.Height)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Shelf.Width)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Shelf.Library.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.BookCount)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FreeWidth)
            </th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelf.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelf.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelf.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelf.Library.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FreeWidth)
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Shelf.ShelfId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
